<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/my_image_view"
        android:layout_width="258dp"
        android:layout_height="67dp"
        android:layout_marginStart="44dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="sans-serif-black"
        android:text="Registro de plato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="104dp"
        android:text="Plato:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editDishName"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/caja"
        android:drawableStart="@drawable/icon_name_master"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Nombre del plato"
        android:inputType="text"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:text="Categoría:"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editCategory"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/caja"
        android:drawableStart="@drawable/icon_category_master"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Categoría"
        android:inputType="text"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/my_image_view"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:text="Precio:"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="154dp"
        android:layout_height="55dp"
        android:layout_marginTop="312dp"
        android:background="@drawable/caja"
        android:drawableStart="@drawable/icon_price_master"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Precio"
        android:inputType="numberDecimal"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/textQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="48dp"
        android:text="Cantidad disponible:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editQuantity"
        android:layout_width="151dp"
        android:layout_height="55dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/caja"
        android:drawableStart="@drawable/icon_quantity_master"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Cantidad"
        android:inputType="number"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/editPrice"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textObservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="392dp"
        android:text="Observaciones:"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editObservations"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/caja"
        android:drawableStart="@drawable/icon_note_master"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Observaciones"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="492dp"
        android:text="Fecha de pedido:"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-3dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/caja"
        android:drawableStart="@drawable/icon_date_master"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Fecha"
        android:inputType="date"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnRegisterDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="16dp"
        android:text="Registrar plato"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
